---
import Layout from "@layouts/Layout.astro";
import Image from "@components/Image.astro";
import Slide from "@components/Slide.astro";
import Text from "@components/Text.astro";
import Card from "@components/Card.astro";
import BeLangs from "@assets/be-langs.svg";
import Hybrid from "@assets/hybrid.svg";
---

<Layout>
  <Slide
    next="/slides/7_js-trends"
    prev="/slides/5_definitions"
    title="Backend Trends"
  >
    <div class="grid grid-cols-2 max-w-5xl gap-4">
      <div class="w-full flex flex-col gap-4">
        <Card title="Popular languages">
          <Image simple src={BeLangs.src} />
        </Card>
        <Card title="Rich applications without complex javascript">
          <Image simple src={Hybrid.src} />
        </Card>
      </div>
      <Card title="Tech and trends">
        <div class="flex flex-col gap-2">
          <Text large>Laravel v12</Text>
          <Text large>PHP 8.x.x</Text>
          <Text large>Rails 8</Text>
          <Text large>Deno v2</Text>
          <Text large>Bun 1.2</Text>
          <Text large>HTML Streaming</Text>
          <Text large>New Go routing</Text>
        </div>
      </Card>
    </div>
  </Slide>
</Layout>
