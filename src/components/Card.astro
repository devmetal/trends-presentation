---
import Text from "./Text.astro";

interface Props {
  title: string;
  list?: boolean;
}

const { title, list = false, ...rest } = Astro.props;
---

<div
  class="text-blue-950 antialiased font-stretch-condensed p-4 py-2 bg-blue-100/30 rounded-md shadow-sm"
  {...rest}
>
  <h2 class="text-2xl antialiased font-bold mb-2">{title}</h2>
  {
    list ? (
      <div class="flex flex-col gap-2">
        <slot />
      </div>
    ) : (
      <div>
        <slot />
      </div>
    )
  }
</div>
